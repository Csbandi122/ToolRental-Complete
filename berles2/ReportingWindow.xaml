<Window x:Class="berles2.ReportingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Riportok" Height="600" Width="1000"
        WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- FEJLÉC -->
        <Border Grid.Row="0" Background="#9C27B0" Padding="15">
            <TextBlock Text="📊 Riportok" FontSize="24" FontWeight="Bold" 
                      Foreground="White" VerticalAlignment="Center"/>
        </Border>

        <!-- FÜLEK -->
        <TabControl Grid.Row="1" Margin="10" FontSize="14">
            <!-- PÉNZÜGYEK FÜL -->
            <TabItem Header="💰 Pénzügyek">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="200"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- SZÉP KÁRTYÁK TÁBLÁZAT HELYETT -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <!-- FEJLÉC -->
                        <Border Background="#2E7D32" CornerRadius="5,5,0,0" Padding="15,10,15,10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="📅 Időszak" FontWeight="Bold" Foreground="White" FontSize="14"/>
                                <TextBlock Grid.Column="1" Text="💰 Bevétel" FontWeight="Bold" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="2" Text="💸 Kiadás" FontWeight="Bold" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="📈 Nyereség" FontWeight="Bold" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <!-- ADATOK - ezeket kódból töltjük fel -->
                        <StackPanel x:Name="FinancialDataPanel"/>
                    </StackPanel>

                    <!-- GRAFIKON -->
                    <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="1" Background="White">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>

                            <!-- GRAFIKON CÍM -->
                            <TextBlock Grid.Row="0" Text="📊 Havi pénzügyi áttekintés - 2025" 
                                      FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>

                            <!-- GRAFIKON TERÜLET -->
                            <Canvas Grid.Row="1" x:Name="ChartCanvas" Background="#FAFAFA" Margin="40,10,10,10"/>

                            <!-- JELMAGYARÁZAT -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                <Border Background="#4CAF50" Width="15" Height="15" Margin="5"/>
                                <TextBlock Text="Bevétel" Margin="5,0,15,0" VerticalAlignment="Center"/>

                                <Border Background="#F44336" Width="15" Height="15" Margin="5"/>
                                <TextBlock Text="Kiadás" Margin="5,0,15,0" VerticalAlignment="Center"/>

                                <Border Background="#2196F3" Width="15" Height="15" Margin="5"/>
                                <TextBlock Text="Nyereség (+)" Margin="5,0,15,0" VerticalAlignment="Center"/>

                                <Border Background="#FF9800" Width="15" Height="15" Margin="5"/>
                                <TextBlock Text="Veszteség (-)" Margin="5,0,15,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>

            <!-- ESZKÖZÖK FÜL -->
            <TabItem Header="🔧 Eszközök">
                <Grid Margin="10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- FEJLÉC -->
                            <Border Background="#FF5722" CornerRadius="5,5,0,0" Padding="15,10,15,10" Margin="0,0,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="🔧 Eszköz neve" FontWeight="Bold" Foreground="White" FontSize="14"/>
                                    <TextBlock Grid.Column="1" Text="📊 Bérlések" FontWeight="Bold" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="2" Text="💰 Bevétel" FontWeight="Bold" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="3" Text="💸 Költség" FontWeight="Bold" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                                    <TextBlock Grid.Column="4" Text="📈 Nyereség" FontWeight="Bold" Foreground="White" FontSize="14" HorizontalAlignment="Center"/>
                                </Grid>
                            </Border>

                            <!-- ESZKÖZ ADATOK - ezeket kódból töltjük fel -->
                            <StackPanel x:Name="DeviceDataPanel"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>