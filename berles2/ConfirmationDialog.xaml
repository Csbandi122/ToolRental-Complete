<Window x:Class="berles2.ConfirmationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bérlés megerősítése" 
        Height="500" Width="600"
        WindowStartupLocation="CenterOwner" 
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- FEJLÉC -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="⚠️ Kérem ellenőrizze a bérlés adatait" 
                       FontSize="20" FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Foreground="#FF6B1F"/>
            <TextBlock Text="A szerződés generálása előtt győződjön meg róla, hogy minden adat helyes!"
                       FontSize="12" 
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       Foreground="Gray"/>
        </StackPanel>

        <!-- ADATOK MEGJELENÍTÉSE -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- BÉRLŐ NEVE -->
                <Border Background="#F0F0F0" Padding="10" Margin="0,0,0,10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Bérlő neve:" FontWeight="Bold" FontSize="14"/>
                        <TextBlock x:Name="CustomerNameText" Text="" FontSize="14" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- LAKCÍM -->
                <Border Background="#F0F0F0" Padding="10" Margin="0,0,0,10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Lakcíme:" FontWeight="Bold" FontSize="14"/>
                        <TextBlock x:Name="CustomerAddressText" Text="" FontSize="14" Margin="0,5,0,0" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- E-MAIL -->
                <Border Background="#F0F0F0" Padding="10" Margin="0,0,0,10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="E-mail címe:" FontWeight="Bold" FontSize="14"/>
                        <TextBlock x:Name="CustomerEmailText" Text="" FontSize="14" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- BÉRELT KERÉKPÁROK SZÁMA -->
                <Border Background="#F0F0F0" Padding="10" Margin="0,0,0,10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Bérelt kerékpárok száma:" FontWeight="Bold" FontSize="14"/>
                        <TextBlock x:Name="DeviceCountText" Text="" FontSize="14" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- BÉRELT KERÉKPÁROK FELSOROLÁSA -->
                <Border Background="#F0F0F0" Padding="10" Margin="0,0,0,10" CornerRadius="5">
                    <StackPanel>
                        <TextBlock Text="Bérelt kerékpárok:" FontWeight="Bold" FontSize="14" Margin="0,0,0,10"/>
                        <WrapPanel x:Name="DevicesWrapPanel" />
                    </StackPanel>
                </Border>

                <!-- TELJES FIZETENDŐ ÖSSZEG -->
                <Border Background="#FFE6E6" Padding="10" Margin="0,0,0,10" CornerRadius="5" BorderBrush="Red" BorderThickness="2">
                    <StackPanel>
                        <TextBlock Text="Teljes fizetendő összeg:" FontWeight="Bold" FontSize="16" Foreground="Red"/>
                        <TextBlock x:Name="TotalAmountText" Text="" FontSize="18" FontWeight="Bold" Margin="0,5,0,0" Foreground="Red"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- GOMBOK -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="OkButton" Content="✅ OK - Folytatás" 
                    Width="150" Height="45" 
                    Background="#4CAF50" Foreground="White" 
                    FontWeight="Bold" FontSize="14"
                    Margin="0,0,20,0"
                    Click="OkButton_Click"/>

            <Button x:Name="CancelButton" Content="❌ Mégsem" 
                    Width="150" Height="45" 
                    Background="#F44336" Foreground="White" 
                    FontWeight="Bold" FontSize="14"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>