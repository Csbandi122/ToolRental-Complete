<Window x:Class="berles2.CustomerSelectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:berles2"
        mc:Ignorable="d"
        Title="Meglévő ügyfél kiválasztása" Height="600" Width="800"
        WindowStartupLocation="CenterOwner" ResizeMode="CanResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Címsor -->
            <RowDefinition Height="Auto"/>
            <!-- Keresés -->
            <RowDefinition Height="*"/>
            <!-- Ügyfelek lista -->
            <RowDefinition Height="Auto"/>
            <!-- Gombok -->
        </Grid.RowDefinitions>

        <!-- CÍMSOR -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="🔍" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <TextBlock Text="Válassz egy meglévő ügyfelet" FontSize="18" FontWeight="Bold" 
                      VerticalAlignment="Center" Foreground="#2E7D32"/>
        </StackPanel>

        <!-- KERESÉS -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,15">
            <TextBox x:Name="SearchTextBox" Width="300" Height="35" 
                    VerticalContentAlignment="Center" FontSize="14"
                    TextChanged="SearchTextBox_TextChanged"/>
            <TextBlock Text="🔍 Keresés név, e-mail vagy város alapján" 
                      VerticalAlignment="Center" Margin="15,0,0,0" 
                      FontWeight="Bold" Foreground="Gray"/>
        </StackPanel>

        <!-- ÜGYFELEK TÁBLÁZAT -->
        <DataGrid Grid.Row="2" x:Name="CustomersDataGrid" 
                 AutoGenerateColumns="False" CanUserAddRows="False" 
                 CanUserDeleteRows="False" IsReadOnly="True" 
                 SelectionMode="Single" GridLinesVisibility="Horizontal" 
                 AlternatingRowBackground="#F9F9F9" FontSize="13"
                 SelectionChanged="CustomersDataGrid_SelectionChanged"
                 MouseDoubleClick="CustomersDataGrid_MouseDoubleClick">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                <DataGridTextColumn Header="Név" Binding="{Binding Name}" Width="150"/>
                <DataGridTextColumn Header="E-mail" Binding="{Binding Email}" Width="180"/>
                <DataGridTextColumn Header="Város" Binding="{Binding City}" Width="120"/>
                <DataGridTextColumn Header="Cím" Binding="{Binding Address}" Width="200"/>
                <DataGridTextColumn Header="Igazolvány szám" Binding="{Binding IdNumber}" Width="120"/>
                <DataGridTextColumn Header="Megjegyzés" Binding="{Binding Comment}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- ALSÓ GOMBOK -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" 
                   HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="SelectButton" Content="✅ Kiválasztás" 
                    Width="120" Height="40" Margin="0,0,15,0"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold" 
                    FontSize="14" IsEnabled="False"
                    Click="SelectButton_Click"/>

            <Button x:Name="CancelButton" Content="❌ Mégsem" 
                    Width="100" Height="40"
                    Background="#757575" Foreground="White" FontWeight="Bold" 
                    FontSize="14" Click="CancelButton_Click"/>
        </StackPanel>

    </Grid>
</Window>