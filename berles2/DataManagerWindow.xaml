<Window x:Class="berles2.DataManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:berles2"
        mc:Ignorable="d"
        Title="Adatkezelő - Kerékpár Bérlő Rendszer" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Fejléc -->
            <RowDefinition Height="*"/>
            <!-- Főtartalom -->
            <RowDefinition Height="50"/>
            <!-- Alsó gombok -->
        </Grid.RowDefinitions>

        <!-- FEJLÉC -->
        <Border Grid.Row="0" Background="#2E7D32" Padding="15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="🔧" FontSize="28" Margin="0,0,15,0" Foreground="White"/>
                <TextBlock Text="Adatkezelő" FontSize="24" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- FÜLES FŐTARTALOM -->
        <TabControl Grid.Row="1" Margin="10" FontSize="14">

            <!-- ÜGYFELEK FÜL -->
            <TabItem Header="👥 Ügyfelek" x:Name="CustomersTab">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <!-- Felső gombok -->
                        <RowDefinition Height="*"/>
                        <!-- DataGrid -->
                    </Grid.RowDefinitions>

                    <!-- FELSŐ ESZKÖZTÁR -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" 
                               HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Button x:Name="AddCustomerButton" Content="➕ Új ügyfél" 
                                Width="100" Height="30" Margin="0,0,10,0"
                                Background="#4CAF50" Foreground="White" FontWeight="Bold"
                                Click="AddCustomerButton_Click"/>

                        <Button x:Name="EditCustomerButton" Content="✏️ Szerkesztés" 
                                Width="100" Height="30" Margin="0,0,10,0"
                                Background="#2196F3" Foreground="White" FontWeight="Bold"
                                IsEnabled="False" Click="EditCustomerButton_Click"/>

                        <Button x:Name="DeleteCustomerButton" Content="🗑️ Törlés" 
                                Width="100" Height="30" Margin="0,0,20,0"
                                Background="#F44336" Foreground="White" FontWeight="Bold"
                                IsEnabled="False" Click="DeleteCustomerButton_Click"/>

                        <TextBox x:Name="SearchCustomerTextBox" Width="200" Height="30" 
                                Margin="0,0,10,0" VerticalContentAlignment="Center"
                                TextChanged="SearchCustomerTextBox_TextChanged"/>

                        <TextBlock Text="🔍 Keresés" VerticalAlignment="Center" 
                                  Margin="0,0,10,0" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- ÜGYFELEK TÁBLÁZAT -->
                    <DataGrid Grid.Row="1" x:Name="CustomersDataGrid" 
                             Margin="0,10,0,0" AutoGenerateColumns="False"
                             CanUserAddRows="False" CanUserDeleteRows="False"
                             IsReadOnly="True" SelectionMode="Single"
                             GridLinesVisibility="Horizontal" AlternatingRowBackground="#F5F5F5"
                             SelectionChanged="CustomersDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Név" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="Irányítószám" Binding="{Binding Zipcode}" Width="100"/>
                            <DataGridTextColumn Header="Város" Binding="{Binding City}" Width="120"/>
                            <DataGridTextColumn Header="Cím" Binding="{Binding Address}" Width="200"/>
                            <DataGridTextColumn Header="E-mail" Binding="{Binding Email}" Width="150"/>
                            <DataGridTextColumn Header="Igazolvány szám" Binding="{Binding IdNumber}" Width="120"/>
                            <DataGridTextColumn Header="Megjegyzés" Binding="{Binding Comment}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- ESZKÖZÖK FÜL -->
            <TabItem Header="🚲 Eszközök" x:Name="DevicesTab">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <!-- Felső gombok -->
                        <RowDefinition Height="*"/>
                        <!-- DataGrid -->
                    </Grid.RowDefinitions>

                    <!-- FELSŐ ESZKÖZTÁR -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" 
                               HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Button x:Name="AddDeviceButton" Content="➕ Új eszköz" 
                                Width="100" Height="30" Margin="0,0,10,0"
                                Background="#4CAF50" Foreground="White" FontWeight="Bold"
                                Click="AddDeviceButton_Click"/>

                        <Button x:Name="EditDeviceButton" Content="✏️ Szerkesztés" 
                                Width="100" Height="30" Margin="0,0,10,0"
                                Background="#2196F3" Foreground="White" FontWeight="Bold"
                                IsEnabled="False" Click="EditDeviceButton_Click"/>

                        <Button x:Name="DeleteDeviceButton" Content="🗑️ Törlés" 
                                Width="100" Height="30" Margin="0,0,20,0"
                                Background="#F44336" Foreground="White" FontWeight="Bold"
                                IsEnabled="False" Click="DeleteDeviceButton_Click"/>

                        <TextBox x:Name="SearchDeviceTextBox" Width="200" Height="30" 
                                Margin="0,0,10,0" VerticalContentAlignment="Center"
                                TextChanged="SearchDeviceTextBox_TextChanged"/>

                        <TextBlock Text="🔍 Keresés" VerticalAlignment="Center" 
                                  Margin="0,0,10,0" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- ESZKÖZÖK TÁBLÁZAT -->
                    <DataGrid Grid.Row="1" x:Name="DevicesDataGrid" 
                             Margin="0,10,0,0" AutoGenerateColumns="False"
                             CanUserAddRows="False" CanUserDeleteRows="False"
                             IsReadOnly="True" SelectionMode="Single"
                             GridLinesVisibility="Horizontal" AlternatingRowBackground="#F5F5F5"
                             SelectionChanged="DevicesDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Eszköz neve" Binding="{Binding DeviceName}" Width="150"/>
                            <DataGridTextColumn Header="Típus" Binding="{Binding DeviceTypeNavigation.TypeName}" Width="100"/>
                            <DataGridTextColumn Header="Sorozatszám" Binding="{Binding Serial}" Width="120"/>
                            <DataGridTextColumn Header="Vételár" Width="80">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="Price" StringFormat="{}{0:N0} Ft"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Bérlési ár" Width="80">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="RentPrice" StringFormat="{}{0:N0} Ft"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridCheckBoxColumn Header="Elérhető" Binding="{Binding Available}" Width="70"/>
                            <DataGridTextColumn Header="Bérlések száma" Binding="{Binding RentCount}" Width="100"/>
                            <DataGridTextColumn Header="Megjegyzés" Binding="{Binding Notes}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- BÉRLÉSEK FÜL - CSAK OLVASHATÓ -->
            <TabItem Header="📋 Bérlések" x:Name="RentalsTab">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <!-- Felső keresés -->
                        <RowDefinition Height="*"/>
                        <!-- DataGrid -->
                    </Grid.RowDefinitions>

                    <!-- FELSŐ KERESÉS -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" 
                               HorizontalAlignment="Left" VerticalAlignment="Center">
                        <TextBox x:Name="SearchRentalTextBox" Width="200" Height="30" 
                                Margin="0,0,10,0" VerticalContentAlignment="Center"
                                TextChanged="SearchRentalTextBox_TextChanged"/>

                        <TextBlock Text="🔍 Keresés (jegy szám, ügyfél neve)" VerticalAlignment="Center" 
                                  Margin="0,0,20,0" FontWeight="Bold"/>

                        <Button x:Name="RefreshRentalsButton" Content="🔄 Frissítés" 
                                Width="100" Height="30"
                                Background="#2196F3" Foreground="White" FontWeight="Bold"
                                Click="RefreshRentalsButton_Click"/>
                    </StackPanel>

                    <!-- BÉRLÉSEK TÁBLÁZAT -->
                    <DataGrid Grid.Row="1" x:Name="RentalsDataGrid" 
                             Margin="0,10,0,0" AutoGenerateColumns="False"
                             CanUserAddRows="False" CanUserDeleteRows="False"
                             IsReadOnly="True" SelectionMode="Single"
                             GridLinesVisibility="Horizontal" AlternatingRowBackground="#F5F5F5">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Jegy szám" Binding="{Binding TicketNr}" Width="80"/>
                            <DataGridTextColumn Header="Ügyfél neve" Binding="{Binding CustomerName}" Width="150"/>
                            <DataGridTextColumn Header="Bérlés kezdete" Width="120">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="RentStart" StringFormat="{}{0:yyyy.MM.dd HH:mm}"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Napok" Binding="{Binding RentalDays}" Width="60"/>
                            <DataGridTextColumn Header="Végösszeg" Width="80">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="TotalAmount" StringFormat="{}{0:N0} Ft"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Fizetési mód" Binding="{Binding PaymentMode}" Width="100"/>
                            <DataGridTextColumn Header="Bérelt eszközök" Binding="{Binding DevicesText}" Width="200"/>
                            <DataGridTextColumn Header="Megjegyzés" Binding="{Binding Comment}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- PÉNZÜGYEK FÜL -->
            <TabItem Header="💰 Pénzügyek" x:Name="FinancialsTab">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <!-- Felső gombok -->
                        <RowDefinition Height="*"/>
                        <!-- DataGrid -->
                    </Grid.RowDefinitions>

                    <!-- FELSŐ ESZKÖZTÁR -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" 
                   HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Button x:Name="AddFinancialButton" Content="➕ Új tétel" 
                    Width="100" Height="30" Margin="0,0,10,0"
                    Background="#4CAF50" Foreground="White" FontWeight="Bold"
                    Click="AddFinancialButton_Click"/>

                        <Button x:Name="EditFinancialButton" Content="✏️ Szerkesztés" 
                    Width="100" Height="30" Margin="0,0,10,0"
                    Background="#2196F3" Foreground="White" FontWeight="Bold"
                    IsEnabled="False" Click="EditFinancialButton_Click"/>

                        <Button x:Name="DeleteFinancialButton" Content="🗑️ Törlés" 
                    Width="100" Height="30" Margin="0,0,20,0"
                    Background="#F44336" Foreground="White" FontWeight="Bold"
                    IsEnabled="False" Click="DeleteFinancialButton_Click"/>

                        <ComboBox x:Name="FinancialTypeFilterComboBox" Width="120" Height="30" 
                     Margin="0,0,10,0" SelectionChanged="FinancialTypeFilterComboBox_SelectionChanged">
                            <ComboBoxItem Content="Összes típus" IsSelected="True"/>
                            <ComboBoxItem Content="Bevétel"/>
                            <ComboBoxItem Content="Költség"/>
                        </ComboBox>

                        <TextBox x:Name="SearchFinancialTextBox" Width="200" Height="30" 
                    Margin="0,0,10,0" VerticalContentAlignment="Center"
                    TextChanged="SearchFinancialTextBox_TextChanged"/>

                        <TextBlock Text="🔍 Keresés" VerticalAlignment="Center" 
                      Margin="0,0,10,0" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- PÉNZÜGYI TÉTELEK TÁBLÁZAT -->
                    <DataGrid Grid.Row="1" x:Name="FinancialsDataGrid" 
                 Margin="0,10,0,0" AutoGenerateColumns="False"
                 CanUserAddRows="False" CanUserDeleteRows="False"
                 IsReadOnly="True" SelectionMode="Single"
                 GridLinesVisibility="Horizontal" AlternatingRowBackground="#F5F5F5"
                 SelectionChanged="FinancialsDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Dátum" Width="100">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="Date" StringFormat="{}{0:yyyy.MM.dd}"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Típus" Binding="{Binding EntryType}" Width="80"/>
                            <DataGridTextColumn Header="Forrás típus" Binding="{Binding SourceType}" Width="100"/>
                            <DataGridTextColumn Header="Jegy szám" Binding="{Binding TicketNr}" Width="80"/>
                            <DataGridTextColumn Header="Összeg" Width="100">
                                <DataGridTextColumn.Binding>
                                    <Binding Path="Amount" StringFormat="{}{0:N0} Ft"/>
                                </DataGridTextColumn.Binding>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Megjegyzés" Binding="{Binding Comment}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- SZERVIZ FÜL -->
            <TabItem Header="🔧 Szerviz" x:Name="ServicesTab">
                <TextBlock Text="Szerviz kezelése - hamarosan..." 
                          HorizontalAlignment="Center" VerticalAlignment="Center" 
                          FontSize="16" Foreground="Gray"/>
            </TabItem>

        </TabControl>

        <!-- ALSÓ GOMBOK -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CloseButton" Content="Bezárás" 
                        Width="100" Height="30"
                        Background="#757575" Foreground="White" FontWeight="Bold"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>