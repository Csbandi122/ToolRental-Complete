<Window x:Class="berles2.DataManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:berles2"
        mc:Ignorable="d"
        Title="Adatkezelő - Kerékpár Bérlő Rendszer" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <!-- Fejléc -->
            <RowDefinition Height="*"/>
            <!-- Főtartalom -->
            <RowDefinition Height="50"/>
            <!-- Alsó gombok -->
        </Grid.RowDefinitions>

        <!-- FEJLÉC -->
        <Border Grid.Row="0" Background="#2E7D32" Padding="15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="🔧" FontSize="28" Margin="0,0,15,0" Foreground="White"/>
                <TextBlock Text="Adatkezelő" FontSize="24" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- FÜLES FŐTARTALOM -->
        <TabControl Grid.Row="1" Margin="10" FontSize="14">

            <!-- ÜGYFELEK FÜL -->
            <TabItem Header="👥 Ügyfelek" x:Name="CustomersTab">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <!-- Felső gombok -->
                        <RowDefinition Height="*"/>
                        <!-- DataGrid -->
                    </Grid.RowDefinitions>

                    <!-- FELSŐ ESZKÖZTÁR -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" 
                               HorizontalAlignment="Left" VerticalAlignment="Center">
                        <Button x:Name="AddCustomerButton" Content="➕ Új ügyfél" 
                                Width="100" Height="30" Margin="0,0,10,0"
                                Background="#4CAF50" Foreground="White" FontWeight="Bold"
                                Click="AddCustomerButton_Click"/>

                        <Button x:Name="EditCustomerButton" Content="✏️ Szerkesztés" 
                                Width="100" Height="30" Margin="0,0,10,0"
                                Background="#2196F3" Foreground="White" FontWeight="Bold"
                                IsEnabled="False" Click="EditCustomerButton_Click"/>

                        <Button x:Name="DeleteCustomerButton" Content="🗑️ Törlés" 
                                Width="100" Height="30" Margin="0,0,20,0"
                                Background="#F44336" Foreground="White" FontWeight="Bold"
                                IsEnabled="False" Click="DeleteCustomerButton_Click"/>

                        <TextBox x:Name="SearchCustomerTextBox" Width="200" Height="30" 
                                Margin="0,0,10,0" VerticalContentAlignment="Center"
                                TextChanged="SearchCustomerTextBox_TextChanged"/>

                        <TextBlock Text="🔍 Keresés" VerticalAlignment="Center" 
                                  Margin="0,0,10,0" FontWeight="Bold"/>
                    </StackPanel>

                    <!-- ÜGYFELEK TÁBLÁZAT -->
                    <DataGrid Grid.Row="1" x:Name="CustomersDataGrid" 
                             Margin="0,10,0,0" AutoGenerateColumns="False"
                             CanUserAddRows="False" CanUserDeleteRows="False"
                             IsReadOnly="True" SelectionMode="Single"
                             GridLinesVisibility="Horizontal" AlternatingRowBackground="#F5F5F5"
                             SelectionChanged="CustomersDataGrid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Név" Binding="{Binding Name}" Width="150"/>
                            <DataGridTextColumn Header="Irányítószám" Binding="{Binding Zipcode}" Width="100"/>
                            <DataGridTextColumn Header="Város" Binding="{Binding City}" Width="120"/>
                            <DataGridTextColumn Header="Cím" Binding="{Binding Address}" Width="200"/>
                            <DataGridTextColumn Header="E-mail" Binding="{Binding Email}" Width="150"/>
                            <DataGridTextColumn Header="Igazolvány szám" Binding="{Binding IdNumber}" Width="120"/>
                            <DataGridTextColumn Header="Megjegyzés" Binding="{Binding Comment}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- TOVÁBBI FÜLEK (egyelőre üres) -->
            <TabItem Header="🚲 Eszközök" x:Name="DevicesTab">
                <TextBlock Text="Eszközök kezelése - hamarosan..." 
                          HorizontalAlignment="Center" VerticalAlignment="Center" 
                          FontSize="16" Foreground="Gray"/>
            </TabItem>

            <TabItem Header="📋 Bérlések" x:Name="RentalsTab">
                <TextBlock Text="Bérlések kezelése - hamarosan..." 
                          HorizontalAlignment="Center" VerticalAlignment="Center" 
                          FontSize="16" Foreground="Gray"/>
            </TabItem>

            <TabItem Header="💰 Pénzügyek" x:Name="FinancialsTab">
                <TextBlock Text="Pénzügyek kezelése - hamarosan..." 
                          HorizontalAlignment="Center" VerticalAlignment="Center" 
                          FontSize="16" Foreground="Gray"/>
            </TabItem>

            <TabItem Header="🔧 Szerviz" x:Name="ServicesTab">
                <TextBlock Text="Szerviz kezelése - hamarosan..." 
                          HorizontalAlignment="Center" VerticalAlignment="Center" 
                          FontSize="16" Foreground="Gray"/>
            </TabItem>

        </TabControl>

        <!-- ALSÓ GOMBOK -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="15,10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="CloseButton" Content="Bezárás" 
                        Width="100" Height="30"
                        Background="#757575" Foreground="White" FontWeight="Bold"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>